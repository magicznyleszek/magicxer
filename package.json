{
  "name": "magicxer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "1.0.3",
  "description": "Magical words mixer",
  "author": {
    "name": "Leszek Pietrzak",
    "email": "smutnyleszek@gmail.com"
  },
  "private": false,
  "homepage": "https://github.com/smutnyleszek/magicxer",
  "repository": "git+https://github.com/smutnyleszek/magicxer.git",
  "bugs": "https://github.com/smutnyleszek/magicxer/issues",
  "license": "CC0-1.0",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watchAll --coverage",
    "start": "parcel -p 2038 src/index.html -d dev",
    "build-docs": "rm -rf docs && parcel build src/index.html -d docs --public-url ./ --no-cache && npm run copy-static-files",
    "build-module": "webpack",
    "copy-static-files": "cp CNAME favicon.png humans.txt LICENSE manifest.json favicon.ico favicon.png docs",
    "pre-publish": "npm test && npm run build-module",
    "publish-please": "publish-please",
    "prepublish": "publish-please guard"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/lodash": "^4.14.101",
    "autoprefixer": "^7.2.6",
    "jest": "^22.2.0",
    "lodash": "^4.17.5",
    "parcel-bundler": "^1.4.1",
    "parcel-plugin-vue": "^1.5.0",
    "postcss": "^6.0.19",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "publish-please": "^2.3.1",
    "stylelint": "^8.4.0",
    "stylelint-order": "^0.8.0",
    "ts-jest": "^22.0.3",
    "ts-loader": "^3.5.0",
    "typescript": "^2.7.1",
    "webpack": "^3.11.0"
  },
  "dependencies": {
    "vue": "^2.5.13",
    "vuex": "^3.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
