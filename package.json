{
  "name": "magicxer",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "version": "1.1.4",
  "description": "Magical words mixer",
  "author": {
    "name": "Leszek Pietrzak",
    "email": "smutnyleszek@gmail.com"
  },
  "private": false,
  "homepage": "https://github.com/smutnyleszek/magicxer",
  "repository": "git+https://github.com/smutnyleszek/magicxer.git",
  "bugs": "https://github.com/smutnyleszek/magicxer/issues",
  "license": "CC0-1.0",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watchAll --coverage",
    "start": "parcel -p 2038 src/index.html -d dev",
    "build-all": "npm run build-docs && npm run build-module",
    "build-docs": "pretty-quick && rm -rf docs && parcel build src/index.html -d docs --public-url ./ --no-cache && npm run copy-static-files",
    "build-module": "pretty-quick && tsc -p tsconfig.module.json",
    "copy-static-files": "cp CNAME favicon.png humans.txt LICENSE manifest.json favicon.ico favicon.png docs",
    "prepublishscript": "npm test && npm run build-module",
    "publish-please": "publish-please",
    "prepublish": "publish-please guard"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.101",
    "autoprefixer": "^7.2.6",
    "jest": "^22.4.3",
    "lodash": "^4.17.10",
    "parcel-bundler": "^1.4.1",
    "parcel-plugin-vue": "^1.5.0",
    "postcss": "^6.0.22",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "publish-please": "^2.4.1",
    "stylelint": "^8.4.0",
    "stylelint-order": "^0.8.1",
    "ts-jest": "^22.4.6",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "vue": "^2.5.13",
    "vuex": "^3.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
